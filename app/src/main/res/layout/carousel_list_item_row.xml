<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/root_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_image"
        android:padding="2dp"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView1"
            fresco:placeholderImage="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv11"
            android:layout_below="@+id/imageView1"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv12"
            android:layout_below="@+id/tv11"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv13"
            android:layout_below="@+id/tv12"
            android:visibility="gone"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/root_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:padding="2dp"
        android:gravity="center"
        android:background="@drawable/shape_rectangle_image"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView2"
            fresco:placeholderImage="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv21"
            android:layout_below="@+id/imageView2"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv22"
            android:layout_below="@+id/tv21"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv23"
            android:layout_below="@+id/tv22"
            android:visibility="gone"
             />

    </RelativeLayout>
</LinearLayout>